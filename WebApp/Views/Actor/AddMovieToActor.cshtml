@model WebApp.Models.AddMovieToActorViewModel

@{
    ViewData["Title"] = "Add Movie to Actor";
}

<h1>Add Movie to @Model.ActorFullName</h1>

<form asp-action="AddMovie" method="post">
    <input type="hidden" name="actorId" value="@Model.ActorId" />

    <div class="form-group">
        <label for="movieId">Movie</label>
        <select name="movieId" class="form-control" id="movieId" required>
            <option value="">Select a movie</option>
            @foreach (var movie in Model.AvailableMovies)
            {
                <option value="@movie.MovieId">@movie.Title</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="characterName">Character Name</label>
        <input type="text" name="characterName" class="form-control" id="characterName" required maxlength="200" />
    </div>

    <button type="submit" class="btn btn-primary mt-3">Add Movie</button>
</form>

<a href="@Url.Action("Movies", "Actor", new { actorId = Model.ActorId })" class="btn btn-secondary mt-3">
    Back to Movies
</a>