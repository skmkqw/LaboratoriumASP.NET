@model List<ContactModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Contacts</h2>
<a class="btn btn-primary" asp-action="Add" asp-controller="Contact">Add contact</a>
<h3 class="my-3">List of contacts</h3>
@if (Model.Count > 0)
{
    <table class="table">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(d => d[0].FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(d => d[0].LastName)
            </th>
            <th>
                @Html.DisplayNameFor(d => d[0].Category)
            </th>
            <th>
                Options
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var entry in @Model)
        {
            <tr>
                <td>
                    @entry.FirstName
                </td>
                <td>
                    @entry.LastName
                </td>
                <td>
                    @entry.Category.GetDisplayName()
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-controller="Contact" asp-route-id="@entry.Id">Edit</a>
                    <a class="btn btn-info" asp-action="Info" asp-controller="Contact" asp-route-id="@entry.Id">Info</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Contact" asp-route-id="@entry.Id">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>   
}
else
{
    <h2>Contacts list is empty!</h2>
}
