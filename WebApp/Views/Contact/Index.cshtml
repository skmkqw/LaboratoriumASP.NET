@model System.Collections.Generic.Dictionary<int,WebApp.Models.ContactModel>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Contacts</h2>
<a class="btn btn-primary" asp-action="Add" asp-controller="Contact">Add contact</a>
<h3 class="my-3">List of contacts</h3>
<table class="table">
    <thead>
    <tr>
        <th>
            First name
        </th>
        <th>
            Last name
        </th>
        <th>
            Options
        </th>
    </tr>
    </thead>
    <tbody>
        @foreach (var entry in @Model)
        {
            <tr>
                <td>
                    @entry.Value.FirstName
                </td>
                <td>
                    @entry.Value.LastName
                </td>
                <td>
                    <a class="btn btn-success" asp-action="Delete" asp-controller="Contact" asp-route-id="@entry.Key">Edit</a>
                    <a class="btn btn-info" asp-action="Delete" asp-controller="Contact" asp-route-id="@entry.Key">Info</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Contact" asp-route-id="@entry.Key">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
